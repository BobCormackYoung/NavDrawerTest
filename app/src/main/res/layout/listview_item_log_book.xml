<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_book_list_item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#d1d2d6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="Log book list item icon image"
            android:id="@+id/log_book_list_item_icon_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:padding="4dp"
            android:scaleType="centerInside"
            tools:src="@drawable/icons_drawstringbag96" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/log_book_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                tools:text="header" />

            <TextView
                android:id="@+id/log_book_list_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                tools:text="grade data" />

        </LinearLayout>


        <ImageView
            android:contentDescription="trophy icon"
            android:id="@+id/trophy_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_trophy" />

        <TextView
            android:id="@+id/trophy_text"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="FA"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#000000" />

        <ImageView
            android:id="@+id/iv_logbook_expand"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:contentDescription="expandable dropdown arrow"
            android:padding="4dp"
            tools:background="@drawable/ic_baseline_expand_more_24px" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_divider"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="2dp"
        android:background="@color/colorClimbingItemsV2" />

    <LinearLayout
        android:id="@+id/ll_alldata_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_logbook_climbing_data_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_logbook_climbing_data1_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade: " />

                <TextView
                    android:id="@+id/tv_logbook_climbing_data1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_climbing_data2_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location: " />

                <TextView
                    android:id="@+id/tv_logbook_climbing_data2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_climbing_data5_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GPS Stored: " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_logbook_climbing_data5"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="check box"
                        tools:background="@drawable/ic_baseline_check_box_checked_24px" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_climbing_data3_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ascent Type: " />

                <TextView
                    android:id="@+id/tv_logbook_climbing_data3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_climbing_data4_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Ascent: " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_logbook_climbing_data4"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="check box"
                        tools:background="@drawable/ic_baseline_check_box_checked_24px" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_logbook_workout_data_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data1_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rep x Set: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data2_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rep Duration: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data3_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rest per Set: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data4_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data5_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data6_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Move Count: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data7_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wall Angle: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data8_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hold Type: " />

                <TextView
                    android:id="@+id/tv_logbook_workout_data8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="dummy" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logbook_workout_data9_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Is Complete? " />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_logbook_workout_data9"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="check box"
                        tools:background="@drawable/ic_baseline_check_box_checked_24px" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>